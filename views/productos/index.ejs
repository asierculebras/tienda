

<table>
     <tr>
        <th> <strong> NOMBRE <strong> </th>
        <th><strong>PRECIO</strong></th>
     </tr>
  <% for (var i in productos) { %>        
     <tr>
        <td>
           <a href="/productos/<%= productos[i].id %>"><%= productos[i].nombre %></a>
        </td>

        <td>
           <p><%= productos[i].precio %></p>
        </td>


        <td>
           <a href="/productos/<%= productos[i].id %>/edit"><button>editar</button></a>
        </td>
        <td>
           <a href="/productos/<%= productos[i].id %>?_method=DELETE" 
              onClick="return confirm('Borrar: <%= productos[i].nombre %>');">
              <button>borrar</button>
           </a>
        </td>
     </tr> 
  <% } %>
</table>

<a href="/productos/new"><button type="button">Crear producto</button></a>


