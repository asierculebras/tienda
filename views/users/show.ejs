
<h2>Usuario</h2>

<p>
  <b>Username: </b><%= user.username %>
</p>

<p>
  <b>Es Administrador: </b><%= user.isAdmin ? "Si" : "No" %>
</p>
<% if (session.user) { %>
    <p>
    <% if (session.user.isAdmin || session.user.id === user.id) { %>
        <BR>
        <a href="/users/<%= user.id %>/edit"><button class="w3-button w3-green" type="button">Editar</button></a>
    <% } %>
    <% if (session.user.isAdmin && session.user.id !== user.id) { %>
        <a href="/users/<%= user.id %>?_method=DELETE"><button class="w3-button w3-red" type="button" onClick="return confirm('Borrar cuenta: <%= user.username %>');"> Borrar </button></a>
    <% } %>
    </p>
<% } %>
<BR>
<a href="/users"> 
    <button class="w3-button w3-blue" type="button"> Volver </button>
</a>
